<section class="content-main">
    <form action="/admin/addReview" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-9">
               

                    <div class="content-header">
                        <h2 class="content-title">Add Review</h2>
                        <div>
                            <button type="submit" class="btn btn-md rounded font-sm hover-up">Publish</button>
                        </div>
                    </div>
                   
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4></h4>
                        </div>
                        <div class="card-body">
                            
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">User Name</label>
                                    <input type="text" value="{{review.name}}" placeholder="Type here" name="name" class="form-control" id="product_name">
                                </div>
                                <input type="hidden" value="{{review._id}}" name="id">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Channel Name</label>
                                    <input type="text" value="{{review.channelName}}" placeholder="Type here" name="channelName" class="form-control" id="product_name">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Review</label>
                                    <textarea onkeyup="validateReview()"  placeholder="Type here" name="review" class="form-control" rows="4">{{review.review}}</textarea>
                                    <small style="color: red;" class="error"></small>
                                </div>
                               
                        </div>
                    </div> <!-- card end// -->
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>YT Image</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                {{#if review}}
                               <img src="assets/ProductImages/{{review.image}}" >
                                {{else}}
                                <img src="assets/imgs/theme/upload.svg" alt="">
                                {{/if}}
                                <input onchange="validateFile()" id="myFile" value="{{review.image}}" class="form-control" name="image" type="file" accept=".png, .jpg, .jpeg, .gif" size="2048">
                                <small class="text-danger" id="alert"></small>
                            </div>
                        </div>
                        
                    </div> <!-- card end// -->
                   
                </div>
            </div>
             </form>
            

           
        </section> <!-- content-main end// -->


<script>
function validateFile() {
  var fileInput = document.getElementById('myFile');
  var fileSize = fileInput.files[0].size; // size in bytes
  var alertElement = document.getElementById('alert');

  if (fileSize > 2000000) { // 2KB in bytes
    alertElement.textContent = 'File size must be less than or equal to 2MB.';
    fileInput.value = ""; // clear the file input to allow re-selection
    return false; // prevent form submission
  }

  alertElement.textContent = ''; // clear the error message
  return true; // allow form submission
}
function validateReview() {
    let small = document.querySelector('.error');
  var textarea = document.querySelector('textarea[name="review"]');
  var review = textarea.value.trim();

  if (review.length > 130) {
    // Display an error message or perform any other action
    small.innerHTML = "Only 130 Characters are allowed"
    return false; // Prevent form submission
  }else{
    small.innerHTML = ""
    return true; // Proceed with form submission
  }
  
}

</script>